{
    "actorSpecification": 1,
    "name": "rag-web-browser",
    "title": "RAG Web browser",
    "description": "Web browser for a retrieval augmented generation workflows. Retrieve and return website content from the top Google Search Results Pages",
    "version": "0.0",
    "input": "./input_schema.json",
    "dockerfile": "./Dockerfile",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "RAG Web browser",
            "description": "Too see all scraped properties, export the whole dataset or select All fields instead of Overview",
            "views": {
                "overview": {
                    "title": "Overview",
                    "description": "Selected fields from the dataset",
                    "transformation": {
                        "fields": [
                            "metadata.url",
                            "metadata.title",
                            "text"
                        ],
                        "flatten": ["metadata"]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "metadata.url": {
                                "label": "Page URL",
                                "format": "text"
                            },
                            "metadata.title": {
                                "label": "Page Title",
                                "format": "text"
                            },
                            "text": {
                                "label": "Extracted text",
                                "format": "text"
                            }
                        }
                    }
                },
                "timeMeasures": {
                    "title": "Time Measures",
                    "description": "Time measures for various events during the crawl",
                    "transformation": {
                        "fields": [
                            "crawl.debug.timeMeasures.event",
                            "crawl.debug.timeMeasures.timeMs",
                            "crawl.debug.timeMeasures.timeDeltaPrevMs"
                        ],
                        "flatten": ["crawl.debug.timeMeasures"]
                    },
                    "display": {
                        "component": "table",
                        "properties": {
                            "crawl.debug.timeMeasures.event": {
                                "label": "Event",
                                "format": "text"
                            },
                            "crawl.debug.timeMeasures.timeMs": {
                                "label": "Time (ms)",
                                "format": "number"
                            },
                            "crawl.debug.timeMeasures.timeDeltaPrevMs": {
                                "label": "Delta (ms)",
                                "format": "number"
                            }
                        }
                    }
                }
            }
        }
    }
}
